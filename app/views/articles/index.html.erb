<header class="bgimg-1 w3-display-container w3-grayscale-min">
  <div class="w3-display-left w3-text-white" style="padding:48px">
    <span class="w3-jumbo w3-hide-small" style="text-shadow: black 1px 0 10px;"><%= t('home.main') %></span><br>
    <span class="w3-xlarge" style="text-shadow: black 1px 0 10px;"><%= t('home.smallmain') %></span>
    <p><a href="<%=new_article_path%>" class="w3-button w3-white w3-padding-large w3-large w3-margin-top w3-opacity w3-hover-opacity-off"><%= t('home.buttonmain') %></a></p>
  </div> 
</header>

  <div class="w3-container w3-padding-32 w3-center">  
    <h3 class="w3-xxlarge"><%= t('home.aboutus') %></h3><br>
    <div class="w3-padding-32 w3-xlarge">
      <p><%= t('home.ourinfo') %></p>
    </div>
  </div>
  <hr/>

  <div class="w3-container" style="padding:90px 16px">
  <h3 class="w3-center w3-xxlarge"><%= t('home.categs') %></h3>
  <p class="w3-center w3-xlarge"><%= t('home.categsinfo') %></p>
  <div class="w3-row-padding w3-center" style="margin-top:64px">
    <div class="w3-quarter">
      <i class="fa-solid fa-sun w3-margin-bottom w3-jumbo w3-center"></i>
      <p class="w3-xlarge"><%= t('home.beginner') %></p>
      <p class="w3-large"><%= t('home.beginnerinfo') %></p>
    </div>
    <div class="w3-quarter">
      <i class="fa-solid fa-cloud w3-margin-bottom w3-jumbo"></i>
      <p class="w3-xlarge"><%= t('home.interm') %></p>
      <p class="w3-large"><%= t('home.interminfo') %></p>
    </div>
    <div class="w3-quarter">
      <i class="fa-solid fa-umbrella w3-margin-bottom w3-jumbo"></i>
      <p class="w3-xlarge"><%= t('home.advan') %></p>
      <p class="w3-large"><%= t('home.advaninfo') %></p>
    </div>
    <div class="w3-quarter">
      <i class="fa-solid fa-bolt w3-margin-bottom w3-jumbo"></i>
      <p class="w3-xlarge"><%= t('home.pro') %></p>
      <p class="w3-large"><%= t('home.proinfo') %></p>
    </div>
  </div>
</div>
 <hr/>

 <ul id="uls">
    <% Article.categories.keys.each do |key| %>
    <li class="w3-quarter" id="links"><%=link_to key.humanize, articles_path(:category=>key)%></li>
    <% end %>
 </ul>

<% @articles.each do |article| %>
    <div class="w3-row-padding w3-padding-16 w3-center w3-quarter">
        <div class="artic">
          <%= link_to article do %>
              <%= image_tag article.image.variant(resize_to_limit: [260, 150]).processed if article.image.attached?%>
              <h2> <%= article.title %> </h2>
              <%= article.category.humanize %> <br/>
              <p><%= t('home.author') %><%= User.find_by(id: article.user_id).name %> </p> 
          <% end %>
          
        </div>
    </div>
<% end %>
